<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">

    <featureManager>
        <feature>restfulWS-4.0</feature>
        <feature>jsonb-3.0</feature>
        <feature>cdi-4.1</feature>
        <feature>mpOpenAPI-3.1</feature>
        <feature>persistence-3.2</feature>
        <feature>data-1.0</feature>
        <feature>enterpriseBeansLite-4.0</feature>
        <feature>monitor-1.0</feature> <!-- Needed for live reload -->
    </featureManager>

    <library id="MySQLLib">
        <fileset dir="${shared.resource.dir}/" includes="mysql*.jar"/>
    </library>

    <dataSource id="DefaultDataSource"
                jndiName="jdbc/peopleMySqlDatasource">
        <jdbcDriver libraryRef="MySQLLib"/>
        <properties serverName="localhost"
                    portNumber="3306"
                    useSSL="true"
                    databaseName="people"
                    user="root"
                    password="root"
                    serverTimezone="UTC"/>
    </dataSource>

    <httpEndpoint id="defaultHttpEndpoint" httpPort="9080" httpsPort="9443"/>

    <applicationManager autoExpand="true"/>

    <ssl id="defaultSSLConfig" trustDefaultCerts="true"/>

    <applicationMonitor updateTrigger="mbean"/>
</server>

